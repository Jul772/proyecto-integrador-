<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <tittle></tittle>
        <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=3.0, minimum-scale=1.0">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="/css/styles-producto.css">
		<link rel="stylesheet" href="/css/normalize.css">
		<link rel="stylesheet" href="/css/styles-header.css">
    </head>
	<header>
		<%- include("./partials/header") %>
	</header>
    <body>
		<% for( i = 0 ; i < productos.length ; i++) { %>
		<main class="manu-2">
			<div class="container-img">
				<img
					src="/images/products/<%= products.image%>"
					alt="imagen-producto"
				/>
			</div>
			<div class="container-info-product">
                <div>
                    <h1 class="titulo"><%= products.discount%</h1>
                    <h3 class="titulo"><%= products.name%></h3>
                </div>
				<div class="container-price">
					<span class="titulo">$<%= products.price%></span>
					<i class="fa-solid fa-angle-right"></i>
				</div>
				<div class="container-details-product">
					<div class="form-group">
						<label for="size">Cantidad</label>
						<select name="size" id="size">
							<option disabled selected value="">
								Escoge una opción
							</option>
							<option value="10">10</option>
							<option value="20">20</option>
							<option value="30">30</option>
							<option value="40">40</option>
						</select>
					</div>
				</div>

				<div class="container-add-cart">
					<div class="container-quantity">
						<input
							type="number"
							placeholder="1"
							value="1"
							min="1"
							class="input-quantity"
						/>
						<div class="btn-increment-decrement">
							<i class="fa-solid fa-chevron-up" id="increment"></i>
							<i class="fa-solid fa-chevron-down" id="decrement"></i>
						</div>
					</div>
					<button class="btn-add-to-cart">
						<i class="fa-solid fa-plus"></i>
						Añadir al carrito
					</button>
				</div>

				<div class="container-description">
					<div class="title-description">
						<h4>Descripción</h4>
						<i class="fa-solid fa-chevron-down"></i>
					</div>
					<div class="text-description">
						<p><%= products.description%></p>
					</div>
				</div>

				<div class="container-additional-information">
					<div class="title-additional-information">
						<h4>Información adicional</h4>
						<i class="fa-solid fa-chevron-down"></i>
					</div>
					<div class="text-additional-information hidden">
						<p>-----------</p>
					</div>
				</div>

				<div class="container-reviews">
					<div class="title-reviews">
						<h4>Reseñas</h4>
						<i class="fa-solid fa-chevron-down"></i>
					</div>
					<div class="text-reviews hidden">
						<p>-----------</p>
					</div>
				</div>

				<div class="container-social">
					<span>Compartir</span>
					<div class="container-buttons-social">
						<a href="#"><i class="fa-solid fa-envelope" style="color: white;"></i></a>
						<a href="#"><i class="fa-brands fa-facebook" style="color: #0033ff;"></i></a>
						<a href="#"><i class="fa-brands fa-twitter" style="color: #00ebe7;"></i></a>
						<a href="#"><i class="fa-brands fa-instagram" style="color: black"></i></a>
						<a href="#"><i class="fa-brands fa-pinterest" style="color: #ff4000;"></i></a>
					</div>
				</div>
			</div>
		</main>

		<section class="container-related-products">
			<h2>Productos Relacionados</h2>
			<div class="card-list-products">
				<div class="card">
					<div class="card-img">
						<img
							src="https://s4.thcdn.com//productimg/1600/1600/11776868-2774835585006253.jpg"
							alt="producto-1"
						/>
					</div>
					<div class="info-card">
						<div class="text-product">
							<h3>Mezcla de Proteína Vegana</h3>
						</div>
						<div class="price">$9.99</div>
					</div>
				</div>
				<div class="card">
					<div class="card-img">
						<img
							src="https://s4.thcdn.com//productimg/1600/1600/10530408-1854860399191184.jpg"
							alt="producto-2"
						/>
					</div>
					<div class="info-card">
						<div class="text-product">
							<h3>CLA Cápsulas</h3>
						</div>
						<div class="price">$9.99</div>
					</div>
				</div>
				<div class="card">
					<div class="card-img">
						<img
							src="https://s4.thcdn.com//productimg/1600/1600/11067704-1584924200215988.jpg"
							alt="producto-3"
						/>
					</div>
					<div class="info-card">
						<div class="text-product">
							<h3>Proteína de Colágeno</h3>
						</div>
						<div class="price">$41.99</div>
					</div>
				</div>
				<div class="card">
					<div class="card-img">
						<img
							src="https://s4.thcdn.com//productimg/1600/1600/12081395-1154983818450337.jpg"
							alt="producto-4"
						/>
					</div>
					<div class="info-card">
						<div class="text-product">
							<h3>Clear Whey Isolate</h3>
						</div>
						<div class="price">$28.99</div>
					</div>
				</div>
			</div>
		</section>
		<% } %>
		<%- include("./partials/footer") %>
        <script src="https://kit.fontawesome.com/81581fb069.js" crossorigin="anonymous"></script>
	</body>
</html>